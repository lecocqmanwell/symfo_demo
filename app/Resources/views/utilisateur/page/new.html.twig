{% extends 'utilisateur/layout.html.twig' %}

{% block body_id 'user_new' %}

{% block main %}
    <h1>Cr√©er votre compte</h1>

    {{ form_start(form) }}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}


    <input type="submit" value="{{ 'label.create_user'|trans }}" class="btn btn-primary" />
    {{ form_widget(form.saveAndCreateNew, { label: 'label.modification', attr: { class: 'btn btn-primary' } }) }}
    <a href="{{ path('user_index') }}" class="btn btn-link">
        {{ 'action.back_to_list'|trans }}
    </a>
    {{ form_end(form) }}
{% endblock %}


